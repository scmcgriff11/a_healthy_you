<p id="notice"><%= notice %></p>

<h1>Listing Preparation Tips</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preparation_tips.each do |preparation_tip| %>
      <tr>
        <td><%= preparation_tip.name %></td>
        <td><%= link_to 'Show', preparation_tip %></td>
        <td><%= link_to 'Edit', edit_preparation_tip_path(preparation_tip) %></td>
        <td><%= link_to 'Destroy', preparation_tip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

